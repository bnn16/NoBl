#!/bin/bash
# Script to deploy NoBl to Heroku

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Preparing to deploy NoBl to Heroku...${NC}"

# Check if Heroku CLI is installed
if ! command -v heroku &> /dev/null; then
    echo -e "${RED}Error: Heroku CLI is not installed.${NC}"
    echo -e "Please install it first: https://devcenter.heroku.com/articles/heroku-cli"
    exit 1
fi

# Check if user is logged in
heroku_auth=$(heroku auth:whoami 2>&1)
if [[ $heroku_auth == *"not logged in"* ]]; then
    echo -e "${YELLOW}You need to log in to Heroku first.${NC}"
    heroku login
fi

# Ask for app name if not provided
if [ -z "$1" ]; then
    read -p "Enter your Heroku app name (leave blank to create a new app with a random name): " APP_NAME
else
    APP_NAME=$1
fi

# Create or check app
if [ -z "$APP_NAME" ]; then
    echo -e "${YELLOW}Creating a new Heroku app with a random name...${NC}"
    heroku create
    APP_NAME=$(heroku apps:info | grep "=== " | cut -d' ' -f2)
else
    # Check if app exists
    if heroku apps:info --app $APP_NAME &> /dev/null; then
        echo -e "${YELLOW}Using existing Heroku app: $APP_NAME${NC}"
    else
        echo -e "${YELLOW}Creating Heroku app: $APP_NAME${NC}"
        heroku create $APP_NAME
    fi
fi

# Build the app
echo -e "${YELLOW}Building NoBl...${NC}"
./build.sh

# Check if git is initialized
if [ ! -d ".git" ]; then
    echo -e "${YELLOW}Initializing git repository...${NC}"
    git init
    git add .
    git commit -m "Initial commit for Heroku deployment"
fi

# Add Heroku remote if not already added
if ! git remote | grep -q "heroku"; then
    echo -e "${YELLOW}Adding Heroku remote...${NC}"
    heroku git:remote --app $APP_NAME
fi

# Deploy to Heroku
echo -e "${YELLOW}Deploying to Heroku...${NC}"
git push heroku main

# Open the app in browser
echo -e "${GREEN}Deployment complete! Opening app in browser...${NC}"
heroku open --app $APP_NAME

echo -e "${GREEN}Deployment successful! Your NoBl web REPL is now running at: https://$APP_NAME.herokuapp.com${NC}"
